<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:role="http://www.sitecore.net/xmlconfig/role/">
  <sitecore>
    <events role:require="Standalone or ContentManagement">
      <event name="item:saved">
        <handler type="Alyas.Feature.CloudinaryConnect.Events.CloudinaryItemSavedHandler, Alyas.Feature.CloudinaryConnect" method="OnItemSaved"/>
      </event>
      <event name="item:deleting">
        <handler type="Alyas.Feature.CloudinaryConnect.Events.CloudinaryItemDeletingHandler, Alyas.Feature.CloudinaryConnect" method="OnItemDeleting"/>
      </event>
    </events>
    <mediaLibrary>
      <mediaProvider>
        <patch:attribute name="type">Alyas.Feature.CloudinaryConnect.Resources.Media.CloudinaryMediaProvider, Alyas.Feature.CloudinaryConnect</patch:attribute>
      </mediaProvider>
    </mediaLibrary>
    <settings>
      <setting name="Connect.Cloudinary.BaseUrl" value="https://res.cloudinary.com"/>
      <setting name="Connect.Cloudinary.Cloud" value=""/>
      <setting name="Connect.Cloudinary.ApiKey" value=""/>
      <setting name="Connect.Cloudinary.ApiSecret" value=""/>
      <setting name="Connect.Cloudinary.IsResponsive" value="true"/>
      <setting name="Connect.Cloudinary.FormatAuto" value="true"/>
      <setting name="Connect.Cloudinary.QualityAuto" value="true"/>
    </settings>
  </sitecore>
</configuration>